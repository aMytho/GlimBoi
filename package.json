{
  "name": "glimboi",
  "productName": "GlimBoi",
  "version": "2.2.0",
  "description": "A chatbot for Glimesh.tv",
  "main": "build/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/aMytho/GlimBoi.git"
  },
  "build": {
    "appId": "GlimBoi",
    "asar": true,
    "asarUnpack": [
      "src/overlays/**",
      "resources/json/**"
    ],
    "win": {
      "icon": "resources/Icon/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "resources/Icons/icon.ico",
      "installerHeaderIcon": "resources/Icons/icon.ico"
    },
    "linux": {
      "target": "deb",
      "synopsis": "A chatbot for Glimesh.tv",
      "maintainer": "Mytho",
      "vendor": "Mytho",
      "executableName": "GlimBoi",
      "icon": "resources/Icons/256x256.png"
    },
    "directories": {
      "buildResources": "resources/Icons"
    },
    "files": [
      "!docs/*",
      "!dist/*",
      "!@types/*",
      "!lib/*"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc --watch",
    "start": "electron build/main.js",
    "build": "tsc --project tsconfig.production.json && node scripts/copyDependencies.js",
    "build:exe": "electron-builder build  --win --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "deploy": "electron-builder build  --win --publish always",
    "testDeploy": "electron-builder build  --win --config.publish.provider=s3 --config.publish.endpoint=http://127.0.0.1:9000 --config.publish.bucket=test-update"
  },
  "author": "Mytho",
  "license": "MIT",
  "dependencies": {
    "crypto-js": "^4.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.3.1",
    "electron-updater": "^4.3.5",
    "electron-window-state": "^5.0.3",
    "esm": "^3.2.25",
    "jquery": "^3.6.0",
    "music-metadata": "^7.8.5",
    "nedb": "^1.8.0",
    "ws": "^7.5.3"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.0.16",
    "@types/crypto-js": "^4.0.2",
    "@types/datatables.net": "^1.10.19",
    "@types/jquery": "^3.5.5",
    "@types/nedb": "^1.8.11",
    "@types/node": "^14.17.4",
    "@types/ws": "^7.4.7",
    "electron": "^13.5.2",
    "electron-builder": "^22.11.11",
    "electron-packager": "^15.1.0",
    "pkginfo": "^0.4.1",
    "typescript": "^4.3.4"
  }
}
